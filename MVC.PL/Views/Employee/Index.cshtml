
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<a asp-action="Create" class="btn btn-primary" > Create New Employee</a>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="searchvalue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Id" name="departmnetId" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block"/>

        </div>
    </div>
</form>

@if (Model?.Count() > 0) 
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Image)</th>  
                <th>@Html.DisplayNameFor(m => m.DepartmentId)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Address)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.Salary)</th>
                <th>@Html.DisplayNameFor(m => m.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@item.Image" class="img-circle" height ="60" width="60" alt="Employee Image">
                    </td>
                    <td>@Html.DisplayFor(m => item.DepartmentId)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Address)</td>
                    <td>@Html.DisplayFor(m => item.Email)</td>
                    <td>@Html.DisplayFor(m => item.Salary)</td>
                    <td>@Html.DisplayFor(m => item.HireDate.Day)-@Html.DisplayFor(m => item.HireDate.Month)-@Html.DisplayFor(m => item.HireDate.Year)</td>
                    <partial name="_ButtonsPartialView" model="item.Id.ToString()"></partial>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h2>There Is No Employees Have Been Found !</h2>
    </div>
}


