@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
}

<style>
    .searchClass {
        display : flex;
        justify-content:center
    }

</style>

<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary"> Create New Role</a>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Roles">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Role Name" name="searchvalue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />

        </div>
    </div>
    <br />
</form>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.CreatedAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.CreatedAt.Day)-@Html.DisplayFor(m => item.CreatedAt.Month)-@Html.DisplayFor(m => item.CreatedAt.Year)</td>
                    <partial name="_ButtonsPartialView" model="item.Id.ToString()"></partial>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h2>There Is No Roles Have Been Found !</h2>
    </div>
}


